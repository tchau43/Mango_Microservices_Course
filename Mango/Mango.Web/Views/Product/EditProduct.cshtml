@model ProductDto

<form asp-action="EditProduct" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Edit Product</h1>
        <input hidden asp-for="ProductId" />
        <hr />
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;"> Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="ProductCategoryName" class="form-control" />
                        <span asp-validation-for="ProductCategoryName" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Description</label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="ProductDescription" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Price</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="ProductPrice" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
                    </div>
                    <div class="col-10 pb-3">
                        @*<input asp-for="ProductImage" class="form-control" />
                        <input asp-for="ProductImageUrl" hidden class="form-control" />
                        <input asp-for="ProductImageLocalPath" hidden class="form-control" />
                        <span asp-validation-for="ProductImage" class="text-danger"></span> *@
                        <input asp-for="ProductImageUrl" class="form-control" />
                        <span asp-validation-for="ProductImageUrl" class="text-danger"></span>
                    </div>

                    <div class="col-5 offset-2">

                        <a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>

                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ProductImageUrl" class="w-100" alt="" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}